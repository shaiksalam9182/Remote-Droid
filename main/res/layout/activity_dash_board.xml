<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.raj.remotedroid.DashBoard">

    <TextView
        android:layout_width="wrap_content"
        android:text="Choose the Controller Type"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_weight="0.5"
        android:src="@drawable/mic"
        android:background="#FFFFFF"
        android:onClick="changevoice"
        android:text="voice Control" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:layout_weight="0.5"
        android:src="@drawable/mouse"
        android:onClick="changeother"
        android:text="Keyboard and Touchpad" />
</LinearLayout>
</ScrollView>